	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable",
			"cargo": {
				"args": [
					"build",
					"--package=dlrs",
					"--bin=${fileBasenameNoExtension}",
				],
				"filter": {
					"kind": "bin"
				}
			},
			"args": [],
			// "stdio": "test/in",
			"cwd": "${workspaceFolder}",
			// "preLaunchTask": "Create submit.rs"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=${fileBasenameNoExtension}",
					"--package=psrs"
				],
				"filter": {
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}